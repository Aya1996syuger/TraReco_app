<div class="text_font">
 <div class="headding">
  <h2><i class="fas fa-marker"></i>タイムスケジュール作成</h2>
 </div>




 <%= form_with model:@schedule,url: plan_schedules_path do |f| %>


    <%= f.label :項目 %>
    <%= f.text_field :plan_title, maxlength: "12"  %></br>
    
    <%= f.label :開始時刻%>
    <%= f.time_field :start_time %></br>
    
     <%= f.label :終了時刻%>
    <%= f.time_field :finish_time %></br>
    
    
 
    <%= f.label :ジャンル選択 %></br>
   
    <%= f.collection_select(:genre_id, @genres, :id, :name, include_blank: true) %></p>
    
    <%= f.label :値段 %>
    <%= f.text_field :budget,autofocus: true, maxlength: "8" %></br>
    
    <%= f.label :住所 %>
    <%= f.text_field :address,autofocus: true, maxlength: "15" %></br>
    
    <%= f.label :メモ %>
    <%= f.text_area :memo,autofocus: true, maxlength: "30" %></br>
    
     <%= f.submit '作成' %>
     
     
    
 <% end %>

</div>