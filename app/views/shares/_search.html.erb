<!--検索フォーム-->
<div class="search_form_">
  <%= search_form_for @q do |f| %>
  
    <!--name_contは、あいまい検索を指定-->
     <%= f.text_field :title_cont, class="form-control"  %>
    <span class="input-group-btn">
      <%= f.submit "検索",class="btn btn-default" %>
    </span>
  <% end %>
    <!--検索結果-->
  <% if @shares.present? %>
    <!--検索がヒットした場合-->
    <% @shares.each do |share| %>
    <%= share.title %>
  <% else %>
  <!--検索がヒットしなかった場合-->
    <p>検索結果はありません</p>
  <% end %>
  </span>

</div>