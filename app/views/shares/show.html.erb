<div class="text_font">
    <!--記録の複数写真アップロード-->
    <div class="main">
        <div class="main-visual-content">
            <div class="shares_img">
                <% @record.post_files.each do |image| %>
                    <div class="share_img">
                        <% if @record.post_files.present? %>
                            <%= attachment_image_tag image, :image, :fill, 400, 400 %></br>
                        <% else %>
                            <%= image_tag 'no_image.jpg', size: '400x400' %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
                
        <div class="visit">
            訪問日<%= @record.record_date.strftime('%Y/%m/%d') %></br>
                <h4><i class="far fa-hand-point-down"></i><%= @record.title %></h4>
        </div>
        <div class= "row">
             <div class="col-md-7 offset-md-0">
                        <%=safe_join(@record.body.split("\n"),tag(:br))%>
            </div>
            <div class="col-md-5 offset-md-0">
                <table class="info">
                    <th><h5><i class="far fa-question-circle"></i>Infomation</h5></th>
                    <tr>
                        <th>都道府県</th>
                        <td><%= @record.prefecture.name%></td>
                    </tr>
                    <tr>
                        <th>ジャンル</th>
                        <td><%= @record.genre.name %></td>
                    </tr>
                    <tr>
                        <th>予算</th>
                        <td>¥<%= @record.price %></td>
                    </tr>
                    <tr>
                        <th>メンバー</th>
                        <td><%= @record.member %></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="headding">
            <h6><%= @record.customer.name%>さんの記録</h6>
        </div>
        <div class="cards">
            <% @shares.each do |share| %>
                <div class="card" style="width: 15rem;">
                    <% share.post_files.first(1).each do |image| %>
                        <%= link_to share_path(share) do%>
                            <%= attachment_image_tag image, :image, :fill, 150, 150 %></br>
                            <div class="card-body">
                                <h6 class="card-title"><%= share.title %></h5>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>