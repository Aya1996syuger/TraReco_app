<div class="text_font">
    <div class="main">
        <h2><i class="far fa-address-card"></i>会員情報</h2>
        <div class="table-wrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>会員ID</th>
                        <th>ユーザー名前</th>
                        <th>メールアドレス</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% @customers.each do |customer| %>
                    　　<tr>
                            <td><%= customer.id %></td>
                            <td>
                                <%= link_to admin_customer_path(customer.id) ,class:"p" do%>
                                    <%= customer.name %>
                                <% end %>
                            </td>
                            <td><%= customer.email %></td>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="pagenation">
            <%= paginate @customers %>
        </div>
    </div>
</div>
