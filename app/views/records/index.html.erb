
<div class = "text_font">
    <div class="main">
        <div class="headding">
            <h2><i class="fas fa-book-open"></i>記録一覧</h2>
        </div>
        <%= link_to "記録作成",new_record_path, class:"btn btn-success"%></br>
        <div class="cards">
            <% @records.each do |record| %>
                <div class="card">
                    <% record.post_files.first(1).each do |image| %>
                        <%= link_to record_path(record) do%>
                            <%= attachment_image_tag image, :image, :fill, 200, 200 %></br>
                            <h6 class="card-title"><%= record.title %></h5>
                        <% end %>
                    <% end %>
                </div>
            <% end %>
        </div>
        <div class="pagenation">
            <%= paginate @records %>
        </div
    </div>
</div>

