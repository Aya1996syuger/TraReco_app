<% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <% @genre.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>
<div class = "text_font">
 <div class="main">
  <%= form_with model: @genre, url:genres_path, local:true do |f| %>
  
    <div class="headding">
     <h2>ジャンル</h2>
    </div>
    <%= f.text_field :name,placeholder: "観光地、お寺..." %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %>
  
   <div class="col-md-6">
    <table class="table">
     <thead>
       <tr>
        <th>ジャンル</th>
        <th></th>
       </tr>
     </thead>
      <tbody>
       <% @genres.each do |genre| %>
      　 <tr>
       　 <td>
  
          <%= genre.name %>
       　 </td>
       　 <td>
       　 
          <%= link_to "編集する",edit_genre_path(genre), class:"btn btn-success"%>
       　 </td>
       </tr>
       <% end %>
      </tbody>
    </table>
   </div>
   <div class="pagenation">
   <%= paginate @genres %>
   </div>
  </div>
</div>