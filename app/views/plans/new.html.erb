<% if @plan.errors.any? %>
    <%= @plan.errors.count %>件のエラーが発生しました
    <% @plan.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>
<div class="text_font">
    <div class="main">
        <h2><i class="fas fa-list"></i>旅行計画タイトル作成</h2>
        
        
        <%= form_with model:@plan, local:true do |f| %>
         <%= f.label :タイトル %><span class="badge badge-danger">必須</span>
         <%= f.text_field :plan_title %></br>
         
         <%= f.label :日付%><span class="badge badge-danger">必須</span>
         <%= f.date_field :date %></br>
         
         
         
         
         
         
         <%= f.submit '作成' %>
        <% end %>
    </div>
</div>